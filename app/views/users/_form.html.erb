<%= form_for @user do |f| %>
  <div class="text-field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="text-field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="password-field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <%= f.submit "Create"%>
<% end %>
